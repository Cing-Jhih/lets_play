<%- if controller_name != 'sessions' %>
  已經有帳號了嗎？ <br>
  <%= link_to "登入", new_session_path(resource_name),class:"btn btn-primary btn-block bg-color-3 border-color-3" %>
<% end -%>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to  omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-facebook-filled btn-rounded" do%>
      <i class="fab fa-facebook fa-lg"></i> 
        <span><%= OmniAuth::Utils.camelize(provider) %> 登入</span>
      </button> 
    <% end %>  
  <% end -%>
<% end -%><br /><br />

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  還沒有帳號？<%= link_to "註冊", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "忘記密碼?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "還沒收到確認信件?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "還沒收到解鎖指引?", new_unlock_path(resource_name) %><br />
<% end -%>


