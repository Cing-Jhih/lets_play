<!-- ====================================
  ——— User list with intro
  ===================================== -->
    <section class="whiteSection full-width clearfix testimonialArea">
      <div class="container">
        <div class="row testimonial-grid">

          <% users.each do |user| %>
            <%= link_to user_path(user) do %>
              <div class="col-sm-4 col-xs-12">
                <div class='testimonialContent  bg-color-<%= user.kid_age%4 + 1 %>'>
                  <span class="userSign border-color-<%= user.kid_age%4 + 1 %>">
                    <%= image_tag user.avatar, class:"img-circle img-responsive" %>
                  </span>
                  <p><%=  truncate(user.intro, length: 100) %></p>
                  <h3><strong><%= user.name %></strong><br> 
                    <small><strong><%= user.kid_age %>歲孩子的玩伴</strong></small>
                  </h3>
                </div>
              </div>
            <% end %>
          <% end %>

        </div>
      </div>
    </section>