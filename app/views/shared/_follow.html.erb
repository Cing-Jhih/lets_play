<% if current_user %>
  <% if user != current_user %>
    <% if current_user.following?(user)%>
      <%= link_to '取消關注', followship_path(user), remote: true, method: :delete, class:"btn btn-outline-warning btn-pill" , id: "followship_" + user.id.to_s %>
    <% else %>
      <%= link_to '加入關注', followships_path(following_id: user), remote: true, method: :post, class:"btn btn-warning btn-pill" , id: "followship_" + user.id.to_s  %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to '加入關注', followships_path(following_id: user), remote: true, method: :post, class:"btn btn-warning btn-pill" , id: "followship_" + user.id.to_s %>
<% end %>
