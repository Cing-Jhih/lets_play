  <h1>Latest Games</h1>
  <% @latest_games.each do |game| %>
    <%= image_tag game.image, size: "200" %>
    <p><%= link_to game.title, game_path(game) %></p>
    <p><%= truncate(game.step, length: 200) %></p>
    <p>
      <% game.tags.each do |tag| %>
        <%= link_to tag.name, "/games/hashtag/#{tag.name}" %>
      <% end %>
    </p>
  <% end %>

  <%# popular game %>
  <h1>Popular Games</h1>
  <% @popular_games.each do |game| %>
    <%= image_tag game.image, size: "200" %>
    <p><%= link_to game.title, game_path(game) %></p>
    <p><%= truncate(game.step, length: 200) %></p>
  <% end %>

  <%# game situations %>
  <h1>遊戲分類</h1>
  <ul>
    <% @situations.each do |situation| %>
      <li><%= link_to situation.condition, situation_path(situation) %></li>
    <% end %>
  </ul>
