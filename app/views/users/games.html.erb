<%= render partial: "shared/user_info", locals:{user:@user}  %>

<p><%= link_to "收藏", user_path %>(<%= @user.favorites_count %>)</p>
<p>發表(<%= @user.games_count %>)</p>
<p><%= link_to "回應", replies_user_path %>(<%= @user.replies_count %>)</p>

<% if @user.email == current_user.email %>
  <%= link_to "發表遊戲", new_game_path(current_user), class: "btn btn-primary" %>
<% end %>

<hr>

<div>
  <p>發表的遊戲清單</p>
  <% @posted_games.each do |game| %>
    <p>標題:<%= game.title %></p>
    <p>發表者：<%= game.user.name %></p>
    <p>收藏數：<%= game.favorites.size %></p>
    <p>回應數：<%= game.replies.size %></p>
    <p>遊戲圖片:<%= image_tag game.image %></p>
    <p>適玩情境：
      <% game.situation_games.each do |situation_game| %>
        <%= situation_game.situation.condition %>
      <% end %>
    </p>
    <p>適合年齡：
      <% game.age_games.each do |age_game| %>
        <%= age_game.age.name %>
      <% end %> 
    </p>
    <p>遊戲道具：<%= game.tool %></p>
    <p>遊戲方式：<%= game.step %></p>
    <% if @user.email == current_user.email %>
      <%= link_to "編輯遊戲", edit_game_path(game), class: "btn btn-primary" %>
      <%= link_to "刪除遊戲", game_path(game), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-default" %>
    <% end %>

    <hr>
  <% end %>
</div>
