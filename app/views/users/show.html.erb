<%= render partial: "shared/user_info", locals:{user:@user}  %>

<section class="whiteSection full-width clearfix p-t-n">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="tabCommon">
          <ul class="nav nav-tabs">
            <li class="active"><%= link_to "收藏(#{@user.favorites_count})", user_path %></li>
            <li><%= link_to "發表(#{@user.games_count})", games_user_path %></li>
            <li><%= link_to "回應(#{@user.replies_count})", replies_user_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render partial: "shared/game_list", locals:{games: @favorited_games} %>

 
<section class="mainContent full-width clearfix">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="blogComments">
          <h3 class="color-2">悄悄話</h3>
          <div class="homeContactContent">
            <div class="row">
              <% if current_user %>
                <% if @user.email == current_user.email %>
                  <ul class="media-list commentsList">
                    <% @msg_received.each do |message| %>
                      <li class="media">
                        <div class="media-left">
                          <% if message.user.avatar? %>
                            <%= image_tag message.user.avatar, width: "30px", class: "rounded img-circle"%>
                          <% else %>
                            <i class="fa fa-user-edit" aria-hidden="true"></i>
                          <% end %>
                        </div>
                        <div class="media-body">
                          <h4 class="media-heading"><%= link_to message.user.name, user_path(message.user) %></h4>
                          <p><%= time_ago_in_words(message.created_at) %> ago</p>
                          <p><%= message.content %></p>
                        </div>
                      </li>
                    <% end %>
                  </ul>
                </div>
                <% else %>
                  <%= form_for [@receiver, @message], :url => user_messages_path(@user) do |f| %>
                    <div class="col-xs-12">
                      <div class="form-group">
                        <%= f.text_area :content, placeholder: "寫些悄悄話吧！", class: "form-control border-color-4" %>
                      </div>
                    </div>
                    <div class="col-xs-12">
                      <div class="form-group pull-right">
                        <%= f.submit '送出', class: "btn btn-primary" %>&nbsp;&nbsp;
                        <%= f.button "清除", type: :reset, class: "btn btn-outline-primary" %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
