<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @user.avatar unless @user.avatar.blank?%>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Kid Birth:</strong>
  <%= @user.kid_birth %>
</p>

<p>
  <strong>Intro:</strong>
  <%= @user.intro %>
</p>

<% if @user.email == current_user.email %>
  <%= link_to 'Edit Profile', edit_user_path(current_user) %>|
  <%= link_to '修改密碼', edit_user_registration_path(current_user) %>
<% end %>

<br>
<%= link_to 'Back', :back %>
